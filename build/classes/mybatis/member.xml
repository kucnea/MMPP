<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="member"> <!-- namespace : 일종의 식별역할의 변수 -->

	<select id="getCount" resultType="int">
	select count(*) from member
	</select> 
	
	<select id="selectAll" resultType="koreait.vo.Member">
	select * from member	
	</select>
	

	<select id="selectByMno" parameterType="int" resultType="koreait.vo.Member">
	select * from member where mno=#{mno}
	</select> 

	<select id="login" resultType="vo.UserDatauserData" parameterType="java.util.HashMap">
		select * from member where email=#{email} and password=#{password}
	</select>
	
	<update id="changePassw" parameterType="java.util.HashMap">
		UPDATE MEMBER SET PASSWORD=#{password} WHERE email=#{email}
	</update>
	
	<select id="checkEmail" resultType="int" parameterType="String">
		SELECT count(*) FROM MEMBER WHERE email=#{email}	
	</select>
	
	<insert id="addMember" parameterType="koreait.vo.Member" >
			insert into member(mno,name,password,email,gender,hobby,addr,age) 
			values (MEMBER_IDX_SEQ.NEXTVAL,#{name},#{password},#{email},#{gender},#{hobby},#{addr},#{age})
	</insert>
	
	<update id="updateMember" parameterType="koreait.vo.Member">
		UPDATE MEMBER SET email=#{email},GENDER=#{gender},addr=#{addr},hobby=#{hobby},age=#{age} WHERE mno=#{mno}
	</update>
</mapper>








